<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
        <%= link_to tag.name, tag_path(tag) %>
        <%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the article?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Create a new tag", new_article_path, class: "new_tag" %>

